<BorderPane styleClass="background" prefHeight="698.0" prefWidth="828.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Pane prefHeight="115.0" prefWidth="828.0" />
            <ImageView fitHeight="164.0" fitWidth="795.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../assets/images/getRowdyLarge.png" />
               </image>
            </ImageView>
            <BorderPane prefHeight="384.0" prefWidth="828.0" VBox.vgrow="ALWAYS">
               <left>
                  <Pane prefWidth="100.0" BorderPane.alignment="CENTER" />
               </left>
               <right>
                  <Pane prefWidth="100.0" BorderPane.alignment="CENTER" />
               </right>
               <center>
                  <GridPane alignment="TOP_CENTER" maxHeight="-Infinity" prefHeight="146.0" prefWidth="528.0" BorderPane.alignment="CENTER">
                    <columnConstraints>
                      <ColumnConstraints hgrow="ALWAYS" maxWidth="319.0" minWidth="10.0" prefWidth="128.0" />
                      <ColumnConstraints hgrow="ALWAYS" maxWidth="543.0" minWidth="10.0" prefWidth="500.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints maxHeight="378.0" minHeight="10.0" prefHeight="54.0" valignment="CENTER" vgrow="ALWAYS" />
                      <RowConstraints maxHeight="358.0" minHeight="10.0" prefHeight="71.0" valignment="CENTER" vgrow="ALWAYS" />
                      <RowConstraints maxHeight="203.0" minHeight="-Infinity" percentHeight="0.0" prefHeight="51.0" valignment="TOP" vgrow="ALWAYS" />
                    </rowConstraints>
                     <children>
                        <Label prefHeight="28.0" prefWidth="107.0" text="UserName">
                           <font>
                              <Font name="Montserrat Regular" size="16.0" />
                           </font>
                        </Label>
                        <TextField fx:id="username" styleClass="loginTxtFields" prefHeight="35.0" prefWidth="327.0" GridPane.columnIndex="1">
                           <font>
                              <Font name="Montserrat Regular" size="13.0" />
                           </font>
                        </TextField>
                        <PasswordField fx:id="password" styleClass="loginTxtFields" prefHeight="33.0" prefWidth="413.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                           <font>
                              <Font name="Montserrat Regular" size="11.0" />
                           </font>
                        </PasswordField>
                        <Label prefHeight="43.0" prefWidth="107.0" text="Password" GridPane.rowIndex="1">
                           <font>
                              <Font name="Montserrat Regular" size="16.0" />
                           </font>
                        </Label>
                        <HBox alignment="TOP_RIGHT" fillHeight="false" prefHeight="208.0" prefWidth="347.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                           <children>
                              <Label fx:id="error" prefHeight="42.0" prefWidth="224.0" textFill="#da0101">
                                 <font>
                                    <Font name="Montserrat Regular" size="12.0" />
                                 </font>
                              </Label>
                              <Button fx:id="loginBtn" styleClass="navButton" mnemonicParsing="false" onAction="#login" prefHeight="40.0" prefWidth="95.0" text="Login">
                                 <font>
                                    <Font name="Montserrat Regular" size="16.0" />
                                 </font>
                              </Button>
